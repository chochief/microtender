.content__left
	include home-left
.content__center
	section.block.block_white
		h1 Авторизация
		.lead Вход в панель управления
		form.form(name="signinForm" novalidate ng-submit="signinCtrl.submit()")
			.form-group
				label Логин
				input(type="text" required ng-model="signinCtrl.name" autocomplete="off" ng-disabled="signinCtrl.formDisabled()")
				span.help-block Введите ваш логин
			.form-group
				label Пароль
				input(type="password" required ng-model="signinCtrl.password" ng-disabled="signinCtrl.formDisabled()")
				span.help-block Введите ваш пароль
			button.button_admin.button_red(type="submit" ng-disabled="signinForm.$invalid || signinCtrl.formDisabled()") Войти
.content__right
	include home-right